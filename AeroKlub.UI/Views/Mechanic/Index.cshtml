@model AeroKlub.UI.Models.PlaneListViewModel

@using System.Globalization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Strona główna</title>

	<link href="~/css/nouislider.css" rel="stylesheet" />
	<script src="~/Scripts/nouislider.js"></script>
	<link href="~/css/nouislider.min.css" rel="stylesheet" />
	<script src="~/Scripts/nouislider.min.js"></script>
	<script src="~/Scripts/wNumb.js"></script>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>


	<style>
		body {
			padding-top: 70px
		}
	</style>
</head>
<body>

	<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand">Areo Klub</a>

		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					@Html.ActionLink("Home", "Index", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>

				<li class="nav-item">
					@Html.ActionLink("Spis samolotów", "PlaneList", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>

				<li class="nav-item">
					@Html.ActionLink("Zaplanuj przegląd samolotu", "AddServiceToPlane", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Wyloguj", "Login", "Login", new { Clear = true }, new { @class = "nav-link" })
				</li>
			</ul>
		</div>
	</nav>

	<div class="text-center container-fluid">
		<h4 style="margin:auto">Rozkład serwisów dla @Model.Name</h4>

	

		<h5  style="padding:1%">Spis serwisów</h5>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>
						Samolot
					</th>
					<th>
						Data
					</th>
					<th>
						Wykonywana przez
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Servis in Model.Serwis)
				{
					if (Servis.By == Model.Name)
					{
					<tr>
						<td>
							@Servis.Samolot
						</td>
						<td>
							@Servis.Data
						</td>
						<td>
							@Servis.By
						</td>
					</tr>
					}
				}
			</tbody>
		</table>
	</div>
</body>
</html>
