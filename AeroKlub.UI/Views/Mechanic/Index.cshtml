@model AeroKlub.UI.Models.PlaneListViewModel

@using System.Globalization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Strona główna</title>

	<link href="~/css/nouislider.css" rel="stylesheet" />
	<script src="~/Scripts/nouislider.js"></script>
	<link href="~/css/nouislider.min.css" rel="stylesheet" />
	<script src="~/Scripts/nouislider.min.js"></script>
	<script src="~/Scripts/wNumb.js"></script>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>


	<style>
		body {
			padding-top: 70px
		}
	</style>
</head>
<body>

	@Html.Action("NavigationBar", "Mechanic", new { Name = Model.Name, Nickname = Model.NickName })

	<div class="text-center container-fluid">


		<h5 style="padding:1%">Spis serwisów</h5>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>
						Samolot
					</th>
					<th>
						Data
					</th>
					<th>
						Wykonywana przez
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Servis in Model.Serwis)
				{
					if (Servis.By == Model.Name)
					{
						<tr>
							<td>
								@Servis.Samolot
							</td>
							<td>
								@Servis.Data
							</td>
							<td>
								@Servis.By
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</body>
</html>
