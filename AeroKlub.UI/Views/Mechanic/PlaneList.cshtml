@model AeroKlub.UI.Models.PlaneListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Lista samolotów</title>


	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<link href="~/Content/NavbarStyle.css" rel="stylesheet" />



</head>
<body>

	@Html.Action("NavigationBar", "Mechanic", new { Name = Model.Name, Nickname = Model.NickName })


	<div class="container-fluid text-center">

		<h5 style="padding:1%">Spis samolotów</h5>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>
						Nazwa
					</th>
					<th>
						Ilość wylatanych motogodzin
					</th>
			</thead>
			<tbody>
				@foreach (var samolot in Model.Samoloty)
				{
					<tr>
						<td>
							@samolot.Nazwa
						</td>
						<td>
							@samolot.WylataneGodziny godzin
						</td>
					</tr>
				}
			</tbody>

		</table>

	</div>
</body>
</html>
