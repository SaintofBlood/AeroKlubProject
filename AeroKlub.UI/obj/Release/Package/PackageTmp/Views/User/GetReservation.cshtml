@model AeroKlub.UI.Models.ReservationsListViewModel
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="utf-8">


</head>
<body>
	@if (Model.reservations.Any() == true)
	{
		<div class="container" style="padding:3% 0% 0% 0%">
			<ul class="list-group">
				<li class="list-group-item list-group-item-danger"> Zarezerwowane godziny:</li>

				@foreach (var reservation in Model.reservations)
				{
					<li class="list-group-item">@reservation</li>
				}
				@if ((Model.hisreservations != null))
				{
					<li class="list-group-item list-group-item-info"> Twoje rezerwacje:</li>

					foreach (var reservation1 in Model.hisreservations)
					{

						<li class="list-group-item">@reservation1</li>

					}
				}

			</ul>

		</div>
	}
</body>
</html>