@model AeroKlub.UI.Models.PlaneListViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Dodaj manualnie użytkownika</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<link href="~/Content/NavbarStyle.css" rel="stylesheet" />

	<style>
		.col-centered {
			margin: 0 auto;
			float: none;
		}

	</style>
</head>
<body>
	@if (TempData["AdminMessage"] != null)
	{
		<script src="~/Scripts/bootbox.min.js"></script>
		<script src="~/Scripts/bootbox.js"></script>

		<script>

				bootbox.alert({
					size: "small",
					title: "Konto",
					message: '@TempData["AdminMessage"]'
				})
		</script>

	}

	@Html.Action("NavigationBar", "Admin", new { Name = Model.Name, Nickname = Model.NickName })

 
	<div class="container-fluid text-center">

		<h3 style="margin-bottom: 2%;">Dodawanie użytkownika: </h3>
		@using (Html.BeginForm("AddManuallyUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">Login:  </p>@Html.TextBox("NameOfUser", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">Imię:  </p>@Html.TextBox("FirstName", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">Nazwisko:  </p>@Html.TextBox("Lastname", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">Hasło:  </p>@Html.Password("paswd", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">Powtórz hasło:  </p>@Html.Password("secondpaswd", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			<div style="padding-top:10px ; padding-bottom:10px;"><p class="inline">E-Mail:  </p>@Html.TextBox("email", null, new { @class = "form-control col-centered inline", @style = "width:200px;padding-left:10px;" })</div>
			@Html.TextBox("AdminName", Model.Name, new { @readonly = true, @style = "display:none" })
			@Html.TextBox("AdminNickname", Model.NickName, new { @readonly = true, @style = "display:none" })

					
			<input type="submit" value="Dodaj konto" class="btn btn-danger" style="margin-top:10px" />
		}

	</div>
</body>
</html>
