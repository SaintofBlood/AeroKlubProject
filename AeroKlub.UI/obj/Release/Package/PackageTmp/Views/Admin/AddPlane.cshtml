@model AeroKlub.UI.Models.PlaneListViewModel

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Dodaj samolot</title>


	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<link href="~/Content/NavbarStyle.css" rel="stylesheet" />

	<style>
 
		.col-centered {
			margin: 0 auto;
			float: none;
		}

		.bootbox .modal-header {
			display: block;
		}
	</style>

</head>
<body>

	@if (TempData["addplanemessage"] != null)
	{
		<script src="~/Scripts/bootbox.min.js"></script>
		<script src="~/Scripts/bootbox.js"></script>

		<script>

				bootbox.alert({
					size: "small",
					title: "Dodanie samolotu",
					message: '@TempData["addplanemessage"]'
				})
		</script>

	}


	@Html.Action("NavigationBar", "Admin", new { Name = Model.Name, Nickname = Model.NickName })




	<div class="container-fluid text-center">


		<h4>Dodaj samolot</h4>

		@using (Html.BeginForm("AddPlaneToReposiotry", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<div class="text-center">
				Nazwa Samolotu:
				@Html.TextArea("NazwaSamolotu", new { @class = "form-control col-centered", @style = "width:20%" })
			</div>
			<div>
				Ilość wylatanych motogodzin (np.100) :
				@Html.TextArea("Przebieg", new { @class = "form-control col-centered", @style = "width:20%" })
			</div>
			<div>
				@Html.TextArea("Name", Model.Name, new { @readonly = true, style = "display:none" })
			</div>
			<div>
				@Html.TextArea("Nickname", Model.NickName, new { @readonly = true, style = "display:none" })
			</div>
			<div style="padding-top:1%">
				<input type="submit" value="Zapisz" class="btn btn-warning" />
			</div>
		}


	</div>

</body>
</html>
