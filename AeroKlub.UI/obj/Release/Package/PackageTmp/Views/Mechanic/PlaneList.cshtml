@model AeroKlub.UI.Models.PlaneListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>PlaneList</title>


	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<link href="~/Content/NavbarStyle.css" rel="stylesheet" />



</head>
<body>
	<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand">Areo Klub</a>

		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					@Html.ActionLink("Home", "Index", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>

				<li class="nav-item">
					@Html.ActionLink("Spis samolotów", "PlaneList", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>

				<li class="nav-item">
					@Html.ActionLink("Zaplanuj przegląd samolotu", "AddServiceToPlane", "Mechanic", new { Name = Model.Name, NickName = Model.NickName }, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Wyloguj", "Login", "Login", null, new { @class = "nav-link" })
				</li>
			</ul>
		</div>
	</nav>


	<div class="container-fluid text-center">

		<h5 style="padding:1%">Spis samolotów</h5>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>
						Nazwa
					</th>
					<th>
						Ilość wylatanych motogodzin
					</th>
			</thead>
			<tbody>
				@foreach (var samolot in Model.Samoloty)
				{
					<tr>
						<td>
							@samolot.Nazwa
						</td>
						<td>
							@samolot.WylataneGodziny godzin
						</td>
					</tr>
				}
			</tbody>

		</table>

	</div>
</body>
</html>
